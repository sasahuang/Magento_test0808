			<modules>
				<mhello>
					<files>
						<default>MiTAC_Hello.csv</default>
					</files>
				</mhello>
			</modules>
		</translate>
		<events>
			<customer_register_success>
				<observers>
					<newCustomerMessage>
						<type>singleton</type>
						<class>MiTAC_Hello_Model_Observer</class>
						<method>newCustomerMessage</method>
					</newCustomerMessage>
				</observers>
			</customer_register_success>
		</events-->
	</frontend>	
	<admin>
		<routers>
			<mitacadminfaq>
				<use>admin</use>
				<args>
					<module>MiTAC_Faq</module>
					<frontName>mitacadminfaq</frontName>
				</args>
			</mitacadminfaq>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<mitacfaq>
					<file>mitac/faq.xml</file>
				</mitacfaq>
			</updates>
		</layout>
	</adminhtml>
</config>
